<%- include('../layout/header', {title: "Edit Post", user: user}) %>
<h1>Edit Post</h1>
<form action="/hobby/<%= name %>/<%= post.title %>" method="POST">
  <p>
    <label for="title">Title:</label>
    <%= post.title %>
  </p>
  <p>
    <label for="body">Body</label>
    <textarea name="body" rows="10" cols="50"><%= post.body %></textarea>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>
<%- include('../layout/footer') %>
