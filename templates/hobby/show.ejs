
<%- include('../layout/header', {title: "Hobby User List", user: user}) %>

<% title = "List of Users with this hobby" %>
<div class="panel panel-default">
  <div class="panel-body">
    <h1>Users subscribed to <%= name %> </h1>
    <ul>
      <% hobbyUser.forEach(function(hobbyUser) { %>
        <% if(hobbyUser.hobbyName == name) { %>
            <%- include('_show', {hobbyUser: hobbyUser}) %>
        <%  } %>
      <% }); %>
    </ul>

    <a href="/hobby/<%= name %>/subscribe" >Subscribe</a>
    <a href="/hobby/<%= name %>/newpost" >New Post</a>
  </div>
</div>

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= name %>
                <small>created by <%= hobbyUser.name %></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active"><%= name %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <% post.forEach(function(post) { %>
                <%- include('_newPost', {post: post}) %>
            <% }); %>

            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

        </div>

    </div>
    <!-- /.row -->
<div id="return">
  <a class="btn btn-large btn-info" href="/hobby">Return to hobbies</a>
</div>
<%- include('../layout/footer') %>
