                      <a href="/hobby">Hobbies</a>
                  </li>
                    <li>
                        <a href="#">Help</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>

                    <li class="dropdown">
                      <% if(user.username == "Guest") { %>
                        <a href="/login" class="dropdown-toggle" data-toggle="dropdown">Guest?<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                              <a href="/login">Login</a>
                            </li>
                            <li>
                              <a href="/users/new">Signup</a>
                            </li>
                        </ul>
                      <% } else { %>
                        <a href= "/users/<%= user.username %>" class="dropdown-toggle" data-toggle="dropdown">Welcome <%= user.username %> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                          <li>
                            <a href="/users/<%= user.username %>">Profile</a>
                          </li>
                            <li>
                              <a href="/logout">Logout</a>
                            </li>
                        </ul>
                      <% } %>
                    </li>
                </ul>
